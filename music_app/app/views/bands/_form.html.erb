<% action_url = band.persisted? ? band_url(band) : bands_url %>
<% method_type = band.persisted? ? "patch" : "post" %>
<% submit_value = band.persisted? ? "Update band" : "Create band" %>

<form action="<%= action_url %>" method="post">
  <%= form_authentication %>

  <input type="hidden"
         name="_method"
         value="<%= method_type %>">

  <label for="band-name">Band Name</label>
  <input type="text"
         name="band[name]"
         id="band-name"
         value="<%= band.name %>">

  <input type="submit" value="<%= submit_value %>">
</form>
