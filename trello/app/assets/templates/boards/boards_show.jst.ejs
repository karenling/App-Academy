<script>
  $(function() {
    $('.board-list-items').sortable({
      stop: function(event, ui) {
           ui.item.trigger('drop', ui.item.index());
       }
    });
    $('.board-list-items').disableSelection();

  });
</script>

<style type="text/css">
  body {
    background: rgb(0, 121, 191);
  }
</style>

<div class="board-show-title">
  <%= board.escape('title') %>
  <button class="board-delete-button btn btn-danger">x</button>
</div>
<br>

<% var boardCount = board.lists().length %>

<% if (boardCount === 0) { %>
  No lists yet!
<% } else { %>
  <div class="horizontal-boards">
    <ul class="board-list-items"></ul>
    <div class="board-list-form">
      <div class="list-form-opened"></div>
      <div class="list-form-closed"></div>
    </div>
  </div>
<% } %>


<div class="errors"></div>


<br>

<a href="#boards">Back to Board Index</a>
