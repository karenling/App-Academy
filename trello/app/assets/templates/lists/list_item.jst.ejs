<script>
$(function() {
  var cardIds = [];
  $('.cards').each(function(idx, card) {
    var newId = "cards-"+ idx
    $(card).attr("id", newId);
    cardIds.push(newId);
  });

  cardIds = '#'.concat(cardIds.join(", #"));

  $(cardIds).sortable({
  connectWith: ".cards"
}).disableSelection();


  // $( ".cards" ).sortable({
