<h1>Welcome <%= current_user.username %>!</h1>

<b>Your Feed!</b>

<div class="infinite-tweets">



  <ul id="feed">
    <script type="text/template">
        <%% tweets.forEach(function(tweet) { %>
          <li>
            <%%= tweet.content %> --
            <a href="<%%= "/users/" + tweet.user_id %>"><%%= tweet.user.username %></a> --
            <%%= tweet.created_at %>
            <%% if (tweet.mentions.length > 0) { %>
              <ul class="mentions">
                <%% tweet.mentions.forEach(function(mention) { %>
                  <li>
                    <a href="<%%= "/users/" + mention.user_id %>">
                      <%%= mention.user.username %>
                    </a>
                  </li>
                <%% }); %>
              </ul>
            <%% } %>
          </li>
        <%% }); %>

    </script>
  </ul>
  <a href="javascript:void(0)" class="fetch-more">Fetch More</a>
</div>

<%= render "tweets/form" %>
