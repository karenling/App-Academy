<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <%= csrf_token %>

  <label for="user-username">Username</label>
  <input type="text"
         name="user[username]"
         id="user-username"
         value="<%= @user.username %>">

  <label for="user-password">Password</label>
  <input type="password"
         name="user[password]"
         id="user-password">

  <input type="submit" value="Sign In">
</form>
